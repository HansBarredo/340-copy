<h1><%= title %></h1>

  <% if (notice && notice.length > 0) { %>
    <div class="alert alert-success form-success">
      <p class="mb-2"><strong>Success:</strong></p>
      <p class="mb-0"><%= notice[0] %></p>
    </div>
  <% } %>

  <% if (errors && errors.length > 0) { %>
    <div class="alert alert-danger form-errors">
      <p class="mb-2"><strong>Please fix the following errors:</strong></p>
      <ul class="mb-0">
        <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

<main class="form-container">

  <form id="editInventoryForm" class="registration-form" action="/inv/delete/<%= inv_id %>" method="post">

    <label for="inv_make">Make</label>
    <input
      type="text"
      id="inv_make"
      name="inv_make"
      required
      placeholder="e.g. Toyota"
      value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>"
      readonly
    />

    <label for="inv_model">Model</label>
    <input
      type="text"
      id="inv_model"
      name="inv_model"
      required
      placeholder="e.g. Corolla"
      value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>"
      readonly
    />

    <label for="inv_price">Price</label>
    <input
      type="number"
      id="inv_price"
      name="inv_price"
      required
      step="0.01"
      placeholder="e.g. 19999.99"
      value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>"
      readonly
    />

    <label for="inv_year">Year</label>
    <input
      type="number"
      id="inv_year"
      name="inv_year"
      required
      placeholder="e.g. 2020"
      value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>"
      readonly
    />

    <p>Confirm Deletion - The delete is permanent.</p>

    <button type="submit" name="submit" value="delete Vehicle">Delete Vehicle</button>

    <input type="hidden" name="inv_id" <% if (locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %> />
  </form>
</main>
