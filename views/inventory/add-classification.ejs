<h1><%= title %></h1>

<% if (notice && notice.length > 0) { %>
  <div class="alert alert-success form-success">
    <p class="mb-2"><strong>Success:</strong></p>
    <p class="mb-0"><%= notice[0] %></p>
  </div>
<% } %>

<% if (errors && errors.length > 0) { %>
  <div class="alert alert-danger form-errors">
    <p class="mb-2"><strong>Please fix the following errors:</strong></p>
    <ul class="mb-0">
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>
