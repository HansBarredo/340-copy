<h1>
    <%= title %>
</h1>

<% if (notice && notice.length> 0) { %>
    <div class="flash-message">
        <%= notice[0] %>
    </div>
    <% }%>

<% if (errors && errors.errors && errors.errors.length> 0) { %>
    <div class="validation-errors">
        <ul>
            <% errors.errors.forEach(function(error) { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
    </div>
    <% }%>

<div class="addClass-container">
    <form id="adddClassForm" action="/inv/add-classification" method="post">
        <span><em>NAME MUST ME ALPHABETIC CHARACTERS ONLY</em></span>
        <input type="text" name="classification_name" placeholder="classification" required
            value="<%= typeof classification_name !== 'undefined' ? classification_name : '' %>" />
        <button type="submit">Add</button>
    </form>
</div>
