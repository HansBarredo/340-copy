  <h1><%= title %></h1>

    <% if (notice && notice.length > 0) { %>
  <div class="alert alert-success form-success">
    <p class="mb-2"><strong>Success:</strong></p>
    <p class="mb-0"><%= notice[0] %></p>
  </div>
  <% } %>

  <% if (errors && errors.length > 0) { %>
  <div class="alert alert-danger form-errors">
    <p class="mb-2"><strong>Please fix the following errors:</strong></p>
    <ul class="mb-0">
      <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
      <% }) %>
    </ul>
  </div>
  <% } %>
  
<main class="form-container">

  <form action="/account/update/<%= accountData.account_id %>" method="post" class="registration-form">
    <label for="account_firstname">First Name</label>
    <input
      type="text"
      name="account_firstname"
      id="account_firstname"
      value="<%= accountData.account_firstname %>"
      required
    />

    <label for="account_lastname">Last Name</label>
    <input
      type="text"
      name="account_lastname"
      id="account_lastname"
      value="<%= accountData.account_lastname %>"
      required
    />

    <label for="account_email">Email</label>
    <input
      type="email"
      name="account_email"
      id="account_email"
      value="<%= accountData.account_email %>"
      required
    />

    <label for="account_type">Account Type</label>
    <input
      type="text"
      name="account_type"
      id="account_type"
      value="<%= accountData.account_type %>"
      required
    />

    <button type="submit">Update</button>
  </form>
</main>
