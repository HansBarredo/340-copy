<h1><%= title %></h1>

<% if (notice.length > 0) { %>
  <div class="form-success">
    <%= notice %>
  </div>
<% } %>

<% if (errors && errors.array().length > 0) { %>
  <div class="form-errors">
    <ul>
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

<div class="login-container">
  <form action="/account/login" method="POST" class="form-container">
    <label for="account_email">Email</label>
    <input type="email" id="account_email" name="account_email" required placeholder="Enter your email"
      value="<%= typeof account_email !== 'undefined' ? account_email : '' %>" />

    <label for="account_password">Password</label>
    <input type="password" id="account_password" name="account_password" required placeholder="Enter your password" />

    <div class="password-toggle">
      <label for="togglePassword">Show Password</label>
      <input type="checkbox" id="togglePassword" />
    </div>

    <button type="submit">Login</button>

    <div class="signup-link">
      <p>Don't have an account? <a href="/account/register">Register</a></p>
    </div>
  </form>

  <script src="/js/showPassword.js"></script>
</div>