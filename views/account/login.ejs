<h1><%= title %></h1>

<% if (notice.length > 0) { %>
  <div class="alert alert-success">
    <%= notice %>
  </div>
<% } %>

<% if (errors && errors.array().length > 0) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<div class="login-container">
  <form id="loginForm" action="/account/login" method="post">
    <label for="account_email">Email</label>
    <input type="email" id="account_email" name="account_email"
      value="<%= typeof account_email !== 'undefined' ? account_email : '' %>" required />

    <label for="account_password">Password</label>
    <input type="password" id="account_password" name="account_password" required />

    <div class="password-toggle">
      <label for="togglePassword">Show Password</label>
      <input type="checkbox" id="togglePassword" />
    </div>

    <button type="submit">Login</button>

    <div class="signup-link">
      <p>Don't have an account? <a href="/account/register">Register</a></p>
    </div>
  </form>

  <script src="/js/showPassword.js"></script>
</div>
